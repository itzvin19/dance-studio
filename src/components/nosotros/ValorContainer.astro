---
import { Icon } from "astro-icon/components";
const { frase, icono } = Astro.props;
---

<div
  class="w-full border border-primary px-2 py-4 text-sm xl:text-[16px] flex items-center gap-1 md:gap-2"
>
  <Icon name={icono} class="text-primary text-xl" />
  <div class="w-0.5 bg-primary h-full"></div>
  <span class="text-white text-balance">{frase}</span>
</div>
