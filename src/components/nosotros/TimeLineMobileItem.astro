---
const { title, year, imageSrc } = Astro.props;
---

<div class="flex flex-col gap-8 items-start">
  <div
    class="w-32 text-center bg-primary text-xl uppercase font-bold px-6 py-1 shadow-2xl bg-gradient-to-r from-primary to-[#702615]"
  >
    {title}
  </div>
  <div class="flex flex-col gap-4">
    <div class="relative w-full">
      <span
        class="text-primary text-5xl font-bold stroke-text [writing-mode:sideways-lr] absolute z-0 -left-9 top-1/2 -translate-y-1/2"
        >{year}</span
      >
      <img
        src={imageSrc}
        alt={`${title} Dance Studio`}
        class="z-10 relative brightness-30 h-35 md:h-45 w-full object-cover shadow-2xl"
      />
    </div>
    <p class="text-balance text-white">
      <slot />
    </p>
  </div>
</div>
